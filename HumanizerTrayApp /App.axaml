<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="HumanizerTrayApp.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
             
             
             <TrayIcon.Icons>
                 <TrayIcons>
                     <TrayIcon Icon="avares://HumanizerTrayApp/Assets/icon.png" ToolTipText="Avalonia Tray Icon ToolTip">
                         <TrayIcon.Menu>
                             <NativeMenu>
                                 <NativeMenuItem Header="Do the job" Click="NativeMenuItem_DoTheMagicOnClick"  />
                                 <!-- NativeMenuItem Header="Settings" Click="NativeMenuItem_SettingsOnClick" /-->
                                 <NativeMenuItem Header="Exit" Click="NativeMenuItem_ExitOnClick" />
                             </NativeMenu>
                         </TrayIcon.Menu>
                     </TrayIcon>
                 </TrayIcons>
             </TrayIcon.Icons>
             
             
</Application>